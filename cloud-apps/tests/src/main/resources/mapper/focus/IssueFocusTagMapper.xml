<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tianque.scgrid.service.issue.focus.mapper.IssueFocusTagMapper">

    <select id="queryPage" resultType="com.tianque.scgrid.service.issue.focus.entity.IssueFocusTag"
            parameterType="com.tianque.scgrid.service.issue.focus.query.IssueFocusTagQuery">
        select * from issue_focus_tag
		<where>
			<if test="param.id != null">
				and id = #{param.id}
			</if>
			<if test="param.orgId != null">
				and org_id = #{param.orgId}
			</if>
			<if test="param.orgCode != null and param.orgCode != ''">
				and org_code like concat('%',#{param.orgCode},'%')
			</if>
			<if test="param.tagId != null">
				and tag_id = #{param.tagId}
			</if>
			<if test="param.isDelete != null">
				and is_delete = #{param.isDelete}
			</if>
	</where>
    </select>
</mapper>
